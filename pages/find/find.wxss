/* miniprogram/pages/find/find.wxss */
page {
  width: 100%;
  /* height: 100%; */
}
.container {
  width: 100%;
  /* height: 100%; */
  background-color: #f9f9f9;
  padding-bottom: 120rpx;
}
.navBar {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}
.navBar .navItem {
  width: 33.33333%;
  height: 100%;
  background-color: #fff;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.navItem image {
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx 0rpx;
}
.navItem .navName text {
  color: #aaa;
}
.navBar .navItem::after {
  content: '';
  position: absolute;
  /* top: -90rpx; */
  width: 1px;
  height: 90rpx;
  right: 0;
  /* top: -80rpx; */
  border-right: 1px solid #f5f5f5;
}

/* 具体subject */
.subjectItem {
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  /* box-sizing: border-box; */
}
.subjectImg {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.subjectImg image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx 10rpx 0 0;
}
.subjectItem .subjectName {
  font-size: 30rpx;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  /* display: flex; */
  /* align-items: center; */
}
.subjectName .choujiang {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  display: inline-block;
  border-radius: 10rpx;
  color: #fff;
  margin-right: 10rpx;
  background-color: #ff6800;
}
.subjectName .itemNum {
  margin-left: 10rpx;
}
